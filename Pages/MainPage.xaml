<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RestaurantPosMAUI.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:RestaurantPosMAUI.Controls"
    xmlns:data="clr-namespace:RestaurantPosMAUI.Data"
    xmlns:models="clr-namespace:RestaurantPosMAUI.Models"
    xmlns:vm="clr-namespace:RestaurantPosMAUI.ViewModels"
    x:DataType="vm:HomeViewModel"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" x:Key="lbl">
                <!--<Setter Property="" Value="" />-->
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid ColumnDefinitions=".75*,.25*">
        <Grid
            Grid.Column="0"
            Padding="15"
            RowDefinitions="Auto, Auto, *"
            RowSpacing="15">
            <Label
                Grid.Row="0"
                FontAttributes="Bold"
                FontSize="22"
                Text="Hello, Abhay Prince" />
            <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MenuCategoryModel">
                        <Border
                            Padding="20,10"
                            BackgroundColor="{StaticResource LightWheat}"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="0">
                            <HorizontalStackLayout Spacing="5">
                                <Image
                                    Source="{Binding Icon}"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />
                                <Label
                                    Text="{Binding Name}"
                                    TextColor="Maroon"
                                    VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsSelected}"
                                            TargetType="Label"
                                            Value="true">
                                            <Setter Property="TextColor" Value="White" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </HorizontalStackLayout>
                            <Border.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsSelected}"
                                    TargetType="Border"
                                    Value="true">
                                    <Setter Property="Background" Value="Maroon" />
                                </DataTrigger>
                            </Border.Triggers>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=SelectCategoryCommand}" CommandParameter="{Binding Id}" />
                            </Border.GestureRecognizers>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Grid Grid.Row="2">
                <CollectionView ItemsSource="{Binding MenuItems}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="10"
                            Orientation="Vertical"
                            Span="4"
                            VerticalItemSpacing="10" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="data:MenuItem">
                            <Border
                                Padding="10"
                                Stroke="#DDD"
                                StrokeShape="RoundRectangle 10">
                                <VerticalStackLayout>
                                    <Border
                                        BackgroundColor="{StaticResource LightWheat}"
                                        HeightRequest="100"
                                        StrokeThickness="0">
                                        <Image
                                            Aspect="Center"
                                            HorizontalOptions="Center"
                                            MaximumHeightRequest="250"
                                            Source="{Binding Icon}"
                                            VerticalOptions="Center"
                                            WidthRequest="250" />
                                    </Border>
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        Text="{Binding Name}" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding Description}"
                                        TextColor="Gray" />
                                    <FlexLayout JustifyContent="SpaceBetween">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="25"
                                            Text="{Binding Price, StringFormat='{0:C}'}"
                                            TextColor="Maroon" />
                                        <ImageButton
                                            BackgroundColor="{StaticResource LightWheat}"
                                            Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=AddToCartCommand}"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="8"
                                            HeightRequest="25"
                                            Source="shopping_regular_60.png"
                                            WidthRequest="25" />
                                    </FlexLayout>

                                </VerticalStackLayout>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=AddToCartCommand}" CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>

                            </Border>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <BoxView
                    HorizontalOptions="Fill"
                    IsEnabled="{Binding IsLoading}"
                    Opacity="0.5"
                    VerticalOptions="Fill"
                    Color="{StaticResource LightWheat}" />
                <ActivityIndicator
                    HeightRequest="25"
                    HorizontalOptions="Center"
                    IsRunning="{Binding IsLoading}"
                    VerticalOptions="Center"
                    WidthRequest="25"
                    Color="Maroon" />
            </Grid>

        </Grid>
        <Grid
            Grid.Column="1"
            Padding="0,10"
            BackgroundColor="{StaticResource LightWheat}"
            RowDefinitions="Auto, *, Auto">
            <VerticalStackLayout Grid.Row="0" Spacing="5" Padding="10,0">

                <Label
                    FontAttributes="Bold"
                    FontSize="25"
                    Text="Current Order" />
                <controls:CurrentDatetimeControl />
            </VerticalStackLayout>
            <Grid
                Grid.Row="1"
                Padding="10"
                Background="Wheat">
                <CollectionView ItemsSource="{Binding CartItems}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="2" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:CartModel">
                            <Grid>
                                <Border Padding="5" BackgroundColor="{StaticResource LightWheat}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="60, *" ColumnSpacing="10">
                                        <Border
                                            Grid.Column="0"
                                            BackgroundColor="LightGray"
                                            HeightRequest="60"
                                            StrokeShape="RoundRectangle 5"
                                            WidthRequest="60">
                                            <Image
                                                Aspect="AspectFit"
                                                HeightRequest="60"
                                                Source="{Binding Icon}"
                                                WidthRequest="60" />
                                        </Border>
                                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                Text="{Binding Name}" />
                                            <Grid ColumnDefinitions="Auto, *">
                                                <Label
                                                    Grid.Column="0"
                                                    FontAttributes="Bold"
                                                    FontSize="18"
                                                    Text="{Binding Price, StringFormat='{0:C}'}"
                                                    TextColor="Maroon" />
                                                <Grid
                                                    Grid.Column="1"
                                                    ColumnDefinitions="*, 2*, *"
                                                    HorizontalOptions="End"
                                                    WidthRequest="120">
                                                    <ImageButton
                                                        Grid.Column="0"
                                                        Padding="5"
                                                        Background="Yellow"
                                                        CornerRadius="5"
                                                        MinimumHeightRequest="30"
                                                        MinimumWidthRequest="30"
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=DecreaseQuantityCommand}"
                                                        CommandParameter="{Binding .}"
                                                        Source="minus_regular_24.png" />
                                                    <Label
                                                        Grid.Column="1"
                                                        Padding="5"
                                                        Background="White"
                                                        FontSize="18"
                                                        HeightRequest="30"
                                                        HorizontalOptions="Center"
                                                        HorizontalTextAlignment="Center"
                                                        Text="{Binding Quantity}"
                                                        TextColor="Maroon"
                                                        WidthRequest="60" />
                                                    <ImageButton
                                                        Grid.Column="2"
                                                        Background="Yellow"
                                                        CornerRadius="5"
                                                        MinimumHeightRequest="30"
                                                        MinimumWidthRequest="30"
                                                        Source="plus_regular_24.png" 
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=IncreaseQuantityCommand}"
                                                        CommandParameter="{Binding .}"/>

                                                </Grid>
                                            </Grid>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                                <ImageButton
                                    BackgroundColor="Red"
                                    Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=RemoveItemFromCartCommand}"
                                    CommandParameter="{Binding .}"
                                    CornerRadius="5"
                                    HorizontalOptions="End"
                                    MinimumHeightRequest="25"
                                    MinimumWidthRequest="25"
                                    Source="x_regular_24.png"
                                    ToolTipProperties.Text="Remove this item from cart"
                                    VerticalOptions="Start">
                                    <ImageButton.Shadow>
                                        <Shadow Brush="Red" />
                                    </ImageButton.Shadow>
                                </ImageButton>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


            </Grid>

            <VerticalStackLayout Grid.Row="2" Padding="15, 10, 15, 0">
                <Border Background="White"
                        Padding="10"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Maroon" Radius="15" />
                    </Border.Shadow>
                    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                          ColumnDefinitions="2*, 3*"
                          RowSpacing="8">
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Text="Subtotal"
                               Style="{StaticResource lbl}"/>
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               Text="{Binding SubTotal, StringFormat='{0:C}'}"/>

                        <HorizontalStackLayout Grid.Row="1"
                                               Grid.Column="0"
                                               Spacing="2">
                            <Label Text="Taxt" VerticalOptions="Center" />
                            <Label Text="{Binding TaxPercentage, StringFormat='{0}%'}"
                                   Padding="5, 0"
                                   BackgroundColor="Wheat">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TaxPercentageClickCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                        <Label Grid.Row="1"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               Text="{Binding TaxAmount, StringFormat='{0:C}'}" />
                        <Border Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Stroke="Maroon" 
                                StrokeDashArray="20, 5"
                                StrokeThickness="0.5"/>

                        <Label Grid.Row="3"
                               Grid.Column="0"
                               Text="Total"
                               FontAttributes="Bold"
                               Style="{StaticResource lbl}"/>
                        <Label Grid.Row="3"
                               Grid.Column="1"
                               FontAttributes="Bold"
                               Text="{Binding Total, StringFormat='{0:C}'}"
                               HorizontalOptions="Center"/>
                        <Border Grid.Row="4"
                                Grid.ColumnSpan="2"
                                Stroke="Maroon" 
                                StrokeDashArray="20, 5"
                                StrokeThickness="0.5" />
                        <Grid Grid.Row="5"
                              Grid.ColumnSpan="2"
                              ColumnDefinitions="Auto,*, Auto, Auto"
                              ColumnSpacing="5">
                            
                                <Button Grid.Column="0" Text="X" 
                                        BackgroundColor="Red"
                                        MinimumHeightRequest="25"
                                        MinimumWidthRequest="25"
                                        Command="{Binding ClearCartCommand}"
                                        ToolTipProperties.Text="Clear the cart" />

                            <Button Grid.Column="2" Text="Paid Cash" 
                                    BackgroundColor="DarkOliveGreen"
                                    MinimumHeightRequest="25"
                                    MinimumWidthRequest="25"
                                    Command="{Binding  PlaceOrderCommand}">
                                <Button.CommandParameter>
                                    <x:Boolean>false</x:Boolean>
                                </Button.CommandParameter>
                            </Button>

                                <Button Grid.Column="3" Text="Paid Online" 
                                        BackgroundColor="DarkOliveGreen"
                                        MinimumHeightRequest="25"
                                        MinimumWidthRequest="25"        
                                        Command="{Binding PlaceOrderCommand}">
                                <Button.CommandParameter>
                                    <x:Boolean>true</x:Boolean>
                                </Button.CommandParameter>
                            </Button>
                        </Grid>

                    </Grid>
                </Border>
            </VerticalStackLayout>

        </Grid>
    </Grid>

</ContentPage>
